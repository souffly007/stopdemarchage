<resources>
    <style name="Theme.VotreThemePrincipal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">


    <item name="colorAccent">#FF6F00</item>
        <item name="colorControlActivated">#FF6F00</item>
        <item name="colorSwitchThumbNormal">#CCCCCC</item>
        <item name="android:textColorPrimary">#FF6F00</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">"#000000"</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialpadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/dialpad_button_background</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <!-- Nouveau style pour l'activitÃ© SMS Log -->
    <style name="SmsLogTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#FF6F00</item>
        <item name="colorPrimaryDark">#E65100</item>
        <item name="colorAccent">#FF6F00</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="KeypadButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">-4dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:soundEffectsEnabled">true</item>
    </style>

</resources>