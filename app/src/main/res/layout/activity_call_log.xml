<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".CallLogActivity">

    <!-- Statistiques -->
    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_marginTop="80dp"
        android:background="#AA000000"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/stats_received"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ReÃ§us: 0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:gravity="center" />

        <TextView
            android:id="@+id/stats_outgoing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sortants: 0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:gravity="center" />

        <TextView
            android:id="@+id/stats_missed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ManquÃ©s: 0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:gravity="center" />

        <TextView
            android:id="@+id/stats_blocked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BloquÃ©s: 0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:gravity="center" />
    </LinearLayout>

    <!-- Onglets -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#BB000000"
        app:layout_constraintTop_toBottomOf="@id/stats_container">

        <TextView
            android:id="@+id/tab_recent"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="RÃ©cents"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tab_contacts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Contacts"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tab_keypad"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Clavier"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>

    <!-- Contenu des onglets -->
    <FrameLayout
        android:id="@+id/tab_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- RÃ©cents -->
        <LinearLayout
            android:id="@+id/recent_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#44000000"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calls_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:clipToPadding="false"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Contacts -->
        <LinearLayout
            android:id="@+id/contacts_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00F57F17"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Header avec titre et compteur -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mes Contacts"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:id="@+id/contacts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 contacts"
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF"
                    android:background="#33FFFFFF"
                    android:padding="8dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Barre de recherche -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp">

                <SearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:queryHint="Rechercher un contact..."
                    android:iconifiedByDefault="false"
                    android:background="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <!-- Conteneur pour la liste et l'Ã©tat vide -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- Liste des contacts -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="true"
                    android:scrollbarStyle="outsideOverlay" />

                <!-- Ã‰tat vide -->
                <LinearLayout
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“±"
                        android:textSize="64sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aucun contact"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aucun contact trouvÃ©\nsur votre tÃ©lÃ©phone"
                        android:textSize="16sp"
                        android:textColor="#CCFFFFFF"
                        android:textAlignment="center"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

                <!-- Indicateur de chargement -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <!-- CLAVIER COMPLET FONCTIONNEL -->
        <LinearLayout
            android:id="@+id/keypad_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#44000000"
            android:padding="16dp"
            android:visibility="gone">

            <!-- Zone d'affichage du numÃ©ro - RÃ‰DUITE -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Champ d'affichage du numÃ©ro - PLUS COMPACT -->
                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:hint="Composez un numÃ©ro"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:textColor="#000000"
                        android:textColorHint="#666666" />

                    <!-- Nom du contact si reconnu - PLUS COMPACT -->
                    <TextView
                        android:id="@+id/tv_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#666666"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Grille du clavier numÃ©rique - ALIGNEMENT CORRIGÃ‰ -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <!-- PremiÃ¨re ligne : 1, 2, 3 -->
                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="2\nABC"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:text="3\nDEF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <!-- DeuxiÃ¨me ligne : 4, 5, 6 -->
                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="4\nGHI"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="5\nJKL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:text="6\nMNO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <!-- TroisiÃ¨me ligne : 7, 8, 9 -->
                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="7\nPQRS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="8\nTUV"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:text="9\nWXYZ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <!-- QuatriÃ¨me ligne : *, 0, # -->
                <Button
                    android:id="@+id/btn_star"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:text="*"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:text="0\n+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_hash"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:text="#"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#66FFFFFF"
                    android:elevation="2dp" />

            </GridLayout>

            <!-- Boutons d'action -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Bouton Effacer -->
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Effacer"
                    android:textColor="#FFFFFF"
                    android:background="#66FF5722"
                    android:textStyle="bold" />

                <!-- Bouton Appeler -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_call"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="2"
                    android:layout_marginStart="8dp"
                    android:text="Appeler"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Boutons supplÃ©mentaires - REMONTÃ‰S DE 2CM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="60dp">

                <!-- Bouton Ajouter aux contacts -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_contact"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Ajouter"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2196F3"
                    android:textSize="12sp" />

                <!-- Bouton SMS -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sms"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="SMS"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:textSize="12sp" />

                <!-- Bouton Historique -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_history"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Historique"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#9C27B0"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- Texte Ã©tat vide -->
    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aucun appel dans l'historique\n\nPassez un appel pour voir les donnÃ©es ici"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:padding="32dp"
        android:background="#66000000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabs_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB principal - Appel/NumÃ©roteur -->


    <!-- FAB secondaire - Nettoyage des doublons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_clean_duplicates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_manage"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:visibility="gone"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>