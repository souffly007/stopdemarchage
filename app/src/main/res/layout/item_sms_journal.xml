<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_sms_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- En-tÃªte : NumÃ©ro et Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_sms_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¥ +33 6 12 34 56 78"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_sms_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#C62828"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Contenu du SMS -->
        <TextView
            android:id="@+id/text_sms_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenu du SMS..."
            android:textSize="14sp"
            android:textColor="#424242"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Bas : Date et Niveau de risque -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_sms_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“… 01/01/2024 14:30"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/text_sms_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”´ Critique"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#C62828" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>