<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#2C2C2E"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Numéro de téléphone -->
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+33 6 12 34 56 78"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Date du dernier SMS -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/08 14:55"
            android:textColor="#E65100"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvPhoneNumber" />

        <!-- Dernier message -->
        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPhoneNumber"
            android:layout_toStartOf="@id/ivBlocked"
            android:layout_marginTop="4dp"
            android:text="Dernier message ici"
            android:textColor="#39FF14"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="2" />

        <!-- Icône bloqué/débloqué -->
        <ImageView
            android:id="@+id/ivBlocked"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_unblocked"
            android:contentDescription="Bloqué / Débloqué" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>